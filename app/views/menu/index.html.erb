<h1>Menu List</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Availability</th>
  </tr>

  <% @menus.each do |menu| %>
    <tr>
      <td><%= menu.name %></td>
      <td><%= menu.description %></td>
      <td><%= menu.is_available %></td>
      <% if @is_authorized_user %>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<% if @is_authorized_user %>
  <%= link_to 'New', new_menu_path %>
<% end %>

