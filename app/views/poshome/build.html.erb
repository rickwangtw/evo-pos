<h1>Build</h1>
<table>
  <% @orders.each do |order| %>
    <% if order.fulfilled_date == nil %>
      <tr><td>Order: <%= order.id %> </td></tr>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity</th>
      </tr>
      <% order.order_items.each do |item| %>
        <tr>
          <td><%= @menus.find_by(id: item.menu_id).name %></td>
          <td><%= @menus.find_by(id: item.menu_id).description %></td>
          <td><%= item.quantity.to_i %></td>
        </tr>
      <% end %>
      <tr>
        <td><p></td>
      </tr>
    <% end %>
  <% end %>
</table>
